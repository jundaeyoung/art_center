<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.bclass.arts_center.repository.interfaces.MyPageRepository">

	<select id="selectMyShow"
		resultType="com.bclass.arts_center.dto.request.RequestSignUpShowDto">
		select * from show_tb where organizer_id = #{organizerId}
		order by start_date desc;
	</select>

	<select id="selectMyShowDetail"
		resultType="com.bclass.arts_center.dto.request.RequestSignUpShowDto">
		select * from show_tb where id = #{id};
	</select>
	
	<select id="selectMyTicket" resultType="com.bclass.arts_center.dto.TicketCheckDto">
		SELECT *
		FROM ticketing_tb AS t
		JOIN show_tb AS s
        ON t.show_id = s.id
		WHERE user_id = ${userId}
		ORDER BY ticketing_date desc
	</select>
	
</mapper>