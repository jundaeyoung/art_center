<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.bclass.arts_center.repository.interfaces.MyPageRepository">

	<!-- 작성자 : 편용림 rent table join해서 수정 -->
	<select id="selectMyShow"
		resultType="com.bclass.arts_center.dto.request.RequestSignUpShowDto">
		select s.*, r.id AS rentId
		from show_tb AS s
		JOIN rent_place_reservation_tb AS r
		ON s.id = r.show_id
		where s.organizer_id = #{organizerId}
		order by s.start_date desc;
	</select>

	<select id="selectMyShowDetail"
		resultType="com.bclass.arts_center.dto.request.RequestSignUpShowDto">
		select * from show_tb where id = #{id};
	</select>
</mapper>